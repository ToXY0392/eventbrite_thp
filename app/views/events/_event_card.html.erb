<%= link_to event_path(event), class: "card event-card h-100 text-decoration-none" do %>
  <div class="position-relative">
    <% if event.picture.attached? %>
      <%= image_tag event.picture, class: "card-img-top", alt: event.title %>
    <% else %>
      <div class="card-img-placeholder">
        <span class="fw-bold"><%= event.title.to_s[0, 2].upcase.presence || "📅" %></span>
      </div>
    <% end %>
    <span class="badge position-absolute top-0 end-0 m-2 <%= event.is_free? ? 'bg-success' : 'bg-primary' %>">
      <%= event.is_free? ? t("app.events.labels.free") : "#{event.price} €" %>
    </span>
  </div>
  <div class="card-body d-flex flex-column">
    <h5 class="card-title"><%= event.title %></h5>
    <p class="card-text text-muted small flex-grow-1"><%= truncate(event.description, length: 100) %></p>
    <div class="small text-muted d-flex align-items-center gap-2">
      <span>📍 <%= event.location %></span>
      <span>•</span>
      <span>🗓 <%= l(event.start_date, format: :short) rescue event.start_date %></span>
    </div>
  </div>
<% end %>
