<div class="p-4 mb-4 bg-light rounded-3">
  <h1 class="display-5 fw-bold"><%= t("app.events.index.title") %></h1>
  <p class="lead">
    <%= t("app.events.index.subtitle") %>
  </p>
  <%= link_to t("app.events.index.create_btn"), new_event_path, class: "btn btn-primary btn-lg" %>
</div>

<h2 class="h4 mb-3"><%= t("app.events.index.upcoming") %></h2>

<% if @events.any? %>
  <div class="list-group mb-4">
    <% @events.each do |event| %>
      <%= render "events/event_card", event: event %>
    <% end %>
  </div>
<% else %>
  <p><%= t("app.events.index.empty") %></p>
<% end %>
