<div class="p-4 mb-4 bg-light rounded-3">
  <h1 class="display-5 fw-bold"><%= t("app.events.index.title") %></h1>
  <p class="lead">
    <%= t("app.events.index.subtitle") %>
  </p>
  <%= link_to t("app.events.index.create_btn"), new_event_path, class: "btn btn-primary btn-lg" %>
</div>

<h2 class="h4 mb-3"><%= t("app.events.index.upcoming") %></h2>

<% if @events.any? %>
  <div class="list-group mb-4">
    <% @events.each do |event| %>
      <%= link_to event_path(event), class: "list-group-item list-group-item-action" do %>
        <h3 class="h5 mb-1"><%= event.title %></h3>
        <p class="mb-1"><%= truncate(event.description, length: 120) %></p>
        <small>
          <strong><%= t("app.events.labels.date") %> :</strong> <%= l(event.start_date, format: :long) rescue event.start_date %> |
          <strong><%= t("app.events.labels.price") %> :</strong> <%= event.price %> â‚¬ |
          <strong><%= t("app.events.labels.location") %> :</strong> <%= event.location %>
        </small>
      <% end %>
    <% end %>
  </div>
<% else %>
  <p><%= t("app.events.index.empty") %></p>
<% end %>