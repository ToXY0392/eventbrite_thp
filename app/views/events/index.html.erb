<% content_for :skip_container do %><% end %>
<!-- Hero pleine largeur -->
<section class="hero-full py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 text-center">
        <h1 class="display-4 fw-bold text-white mb-3"><%= t("app.events.index.title") %></h1>
        <p class="lead mb-0"><%= t("app.events.index.subtitle") %></p>
      </div>
    </div>
  </div>
</section>

<!-- Contenu principal -->
<div class="container py-5">
  <h2 class="upcoming-title h4 fw-semibold mb-4"><%= t("app.events.index.upcoming") %></h2>

  <% if @events.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @events.each do |event| %>
        <div class="col">
          <%= render "events/event_card", event: event %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5 rounded-3" style="border: 1px solid rgba(255,255,255,0.08);">
      <p class="text-white-50 fs-5 mb-0"><%= t("app.events.index.empty") %></p>
    </div>
  <% end %>
</div>
