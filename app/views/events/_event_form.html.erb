<%
  event = local_assigns.fetch(:event, @event)
  event = event.is_a?(Event) ? event : Event.new
  cancel_path = local_assigns.fetch(:cancel_path, event.persisted? ? event_path(event) : root_path)
  submit_label = local_assigns.fetch(:submit_label, event.persisted? ? t("app.events.edit.submit") : t("app.events.new.submit"))
%>
<%= form_with model: event, local: true do |f| %>
  <% if event.respond_to?(:errors) && event.errors.any? %>
    <div class="alert alert-danger">
      <p><strong><%= t("app.events.new.error_count", count: event.errors.count) %> :</strong></p>
      <ul>
        <% event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: 5, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :start_date, t("app.events.labels.start_date"), class: "form-label" %>
    <%= f.datetime_local_field :start_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :duration, t("app.events.labels.duration"), class: "form-label" %>
    <%= f.number_field :duration, class: "form-control", min: 5, step: 5 %>
  </div>

  <div class="mb-3">
    <%= f.label :price, t("app.events.labels.price") + " (€)", class: "form-label" %>
    <%= f.number_field :price, class: "form-control", min: 0, max: 1000 %>
  </div>

  <div class="mb-3">
    <%= f.label :location, t("app.events.labels.location"), class: "form-label" %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :picture, 
                t("app.events.labels.picture", default: "Image de l'événement"),
                class: "form-label" %>
    <%= f.file_field :picture,
                      accept: "image/*",
                      class: "form-control" %>
</div>

  <div class="d-flex gap-2">
    <%= f.submit submit_label, class: "btn btn-primary" %>
    <%= link_to t("app.events.new.cancel"), cancel_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
