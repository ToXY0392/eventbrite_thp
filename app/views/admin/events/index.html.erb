<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h2 mb-0"><%= t("app.admin.admin_events.index.title") %></h1>
  <div>
    <%= link_to t("app.admin.admin_events.index.new"), new_admin_event_path, class: "btn btn-primary" %>
    <%= link_to t("app.admin.admin_events.index.back"), admin_root_path, class: "btn btn-outline-secondary" %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Titre</th>
        <th>Organisateur</th>
        <th>Date</th>
        <th>Valid√©</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.id %></td>
          <td><%= event.title %></td>
          <td><%= event.admin.email %></td>
          <td><%= l(event.start_date, format: :long) rescue event.start_date %></td>
          <td><%= event.validated? ? "Oui" : "Non" %></td>
          <td>
            <%= link_to "Voir", admin_event_path(event), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "Modifier", edit_admin_event_path(event), class: "btn btn-sm btn-outline-secondary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
