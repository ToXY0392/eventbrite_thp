<%= form_with model: [:admin, @event], local: true do |f| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger">
      <p><strong><%= t("app.events.new.error_count", count: @event.errors.count) %> :</strong></p>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :admin_id, t("app.events.labels.admin"), class: "form-label" %>
    <%= f.collection_select :admin_id, User.order(:email), :id, :email, { prompt: "Sélectionner un organisateur" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: 5, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :start_date, t("app.events.labels.start_date"), class: "form-label" %>
    <%= f.datetime_local_field :start_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :duration, t("app.events.labels.duration"), class: "form-label" %>
    <%= f.number_field :duration, class: "form-control", min: 5, step: 5 %>
  </div>

  <div class="mb-3">
    <%= f.label :price, t("app.events.labels.price") + " (€)", class: "form-label" %>
    <%= f.number_field :price, class: "form-control", min: 0, max: 1000 %>
  </div>

  <div class="mb-3">
    <%= f.label :location, t("app.events.labels.location"), class: "form-label" %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :picture, "Image", class: "form-label" %>
    <%= f.file_field :picture, accept: "image/*", class: "form-control" %>
  </div>

  <div class="mb-3">
    <div class="form-check">
      <%= f.check_box :validated, class: "form-check-input" %>
      <%= f.label :validated, t("app.admin.admin_events.form.validated"), class: "form-check-label" %>
    </div>
  </div>

  <div class="mb-4">
    <div class="form-check">
      <%= f.check_box :reviewed, class: "form-check-input" %>
      <%= f.label :reviewed, t("app.admin.admin_events.form.reviewed"), class: "form-check-label" %>
    </div>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to t("app.events.new.cancel"), admin_events_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
