<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h2 mb-0"><%= t("app.admin.admin_events.show.title") %> : <%= @event.title %></h1>
  <div>
    <%= link_to t("app.admin.admin_events.show.edit"), edit_admin_event_path(@event), class: "btn btn-primary" %>
    <%= button_to t("app.admin.admin_events.show.destroy"),
                  admin_event_path(@event),
                  method: :delete,
                  class: "btn btn-danger",
                  form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cet événement ?" } } %>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card border-0 shadow-sm mb-4">
      <% if @event.picture.attached? %>
        <%= image_tag @event.picture, class: "card-img-top", alt: @event.title, style: "max-height: 400px; object-fit: cover;" %>
      <% end %>
      <div class="card-body">
        <%= simple_format(@event.description, class: "mb-0") %>
        <%= render "events/event_details", event: @event %>
        <p class="mt-3">
          <strong>Validé :</strong> <%= @event.validated? ? "Oui" : "Non" %><br>
          <strong>Revu :</strong> <%= @event.reviewed? ? "Oui" : "Non" %>
        </p>
      </div>
    </div>
  </div>
</div>

<%= link_to "← Retour aux événements", admin_events_path, class: "btn btn-outline-secondary" %>
