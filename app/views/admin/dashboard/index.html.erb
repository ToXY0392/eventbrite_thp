          <h5 class="card-title">üë•</h5>
          <p class="card-text mb-0"><%= t("app.admin.nav_users") %></p>
        </div>
      <% end %>
    </div>
    <div class="col-md-6 col-lg-3">
      <%= link_to admin_event_submissions_path, class: "card text-decoration-none text-white bg-dark border-secondary h-100" do %>
        <div class="card-body">
          <h5 class="card-title">‚è≥</h5>
          <p class="card-text mb-0"><%= t("app.admin.nav_event_submissions") %></p>
