          <% if pending_count > 0 %>
            <span class="badge bg-warning text-dark"><%= pending_count %></span>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-md-6 col-lg-3">
      <%= link_to admin_events_path, class: "card text-decoration-none text-white bg-dark border-secondary h-100" do %>
        <div class="card-body">
          <h5 class="card-title">üìÖ</h5>
          <p class="card-text mb-0"><%= t("app.admin.nav_events") %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
