<div class="container py-5">
  <h1 class="h2 mb-4"><%= t("app.admin.dashboard_title") %></h1>
  <p class="lead text-white-50 mb-4"><%= t("app.admin.welcome") %></p>

  <div class="row g-3">
    <div class="col-md-6 col-lg-3">
      <%= link_to admin_root_path, class: "card text-decoration-none text-white bg-dark border-secondary h-100" do %>
        <div class="card-body">
          <h5 class="card-title">üìä</h5>
          <p class="card-text mb-0"><%= t("app.admin.nav_dashboard") %></p>
        </div>
      <% end %>
    </div>
    <div class="col-md-6 col-lg-3">
      <%= link_to admin_users_path, class: "card text-decoration-none text-white bg-dark border-secondary h-100" do %>
