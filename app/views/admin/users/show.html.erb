<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h2 mb-0"><%= t("app.admin_users.show.title") %></h1>
  <div>
    <%= link_to t("app.admin_users.show.edit"), edit_admin_user_path(@user), class: "btn btn-primary" %>
    <%= button_to t("app.admin_users.show.destroy"),
                  admin_user_path(@user),
                  method: :delete,
                  class: "btn btn-danger",
                  form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cet utilisateur ?" } } %>
  </div>
</div>

<div class="card border-0 shadow-sm">
  <div class="card-body">
    <p><strong>ID :</strong> <%= @user.id %></p>
    <p><strong><%= t("app.admin_users.form.email") %> :</strong> <%= @user.email %></p>
    <p><strong><%= t("app.admin_users.form.first_name") %> :</strong> <%= @user.first_name %></p>
    <p><strong><%= t("app.admin_users.form.last_name") %> :</strong> <%= @user.last_name %></p>
    <p><strong><%= t("app.admin_users.form.description") %> :</strong> <%= @user.description.presence || "—" %></p>
    <p><strong><%= t("app.admin_users.form.is_admin") %> :</strong> <%= @user.admin? ? "Oui" : "Non" %></p>
  </div>
</div>

<p class="mt-3">
  <%= link_to t("app.admin_users.show.back"), admin_users_path, class: "btn btn-outline-secondary" %>
</p>
