<div class="admin-user-show">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
    <div>
      <p class="text-white-50 text-uppercase small mb-1"><%= t("app.admin_users.show.title") %></p>
      <h1 class="h2 mb-0 text-white"><%= @user.first_name.presence || @user.last_name.presence || @user.email %></h1>
    </div>
    <div class="d-flex gap-2">
      <%= link_to t("app.admin_users.show.edit"), edit_admin_user_path(@user), class: "btn btn-primary" %>
      <%= button_to t("app.admin_users.show.destroy"),
                    admin_user_path(@user),
                    method: :delete,
                    class: "btn btn-danger",
                    form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cet utilisateur ?" } } %>
    </div>
  </div>

  <div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-dark border-secondary">
      <h2 class="h6 mb-0 text-white"><%= t("app.admin_users.show.title") %> #<%= @user.id %></h2>
    </div>
    <div class="card-body">
      <dl class="row mb-0">
        <dt class="col-sm-3 text-white-50"><%= t("app.admin_users.form.email") %></dt>
        <dd class="col-sm-9 text-white"><%= @user.email %></dd>

        <dt class="col-sm-3 text-white-50"><%= t("app.admin_users.form.first_name") %></dt>
        <dd class="col-sm-9 text-white"><%= @user.first_name.presence || "—" %></dd>

        <dt class="col-sm-3 text-white-50"><%= t("app.admin_users.form.last_name") %></dt>
        <dd class="col-sm-9 text-white"><%= @user.last_name.presence || "—" %></dd>

        <dt class="col-sm-3 text-white-50"><%= t("app.admin_users.form.description") %></dt>
        <dd class="col-sm-9 text-white"><%= @user.description.presence || "—" %></dd>

        <dt class="col-sm-3 text-white-50"><%= t("app.admin_users.form.is_admin") %></dt>
        <dd class="col-sm-9">
          <span class="badge <%= @user.admin? ? 'bg-success' : 'bg-secondary' %>"><%= @user.admin? ? "Oui" : "Non" %></span>
        </dd>
      </dl>
    </div>
  </div>

  <%= link_to t("app.admin_users.show.back"), admin_users_path, class: "btn btn-outline-secondary" %>
</div>
